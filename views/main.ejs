<div id="sidebar1" class="sidebar1">
  <p><strong>My Cart</strong></p>
  <div id="cart-content">Your Cart Is Empty</div>
  <hr>
  <div>Total: <span id="cart-total">₹00.00</span></div>
  <button class="close-btn" onclick="toggleCart()">Close</button>

  <form action="/payment" method="POST" onsubmit="prepareCartData()">
      <input type="hidden" name="itemNames" id="cart-item-names">
      <input type="hidden" name="itemPrices" id="cart-item-price">
