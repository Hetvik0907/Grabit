<script>
  document.addEventListener("DOMContentLoaded", function () {
      const cartSidebar = document.getElementById("sidebar1");
      const cartContent = document.getElementById("cart-content");
      const cartTotal = document.getElementById("cart-total");
      const cartItemNamesInput = document.getElementById("cart-item-names");
      const cartItemPriceInput = document.getElementById("cart-item-price");
      const cartBtn = document.querySelector(".cart-btn");
  
      // Load cart from localStorage
      let cart = JSON.parse(localStorage.getItem("cart")) || [];
  
      // ✅ Function to Toggle Sidebar Visibility
      window.toggleCart = function () {
          cartSidebar.style.right = (cartSidebar.style.right === "0px") ? "-300px" : "0";
      };
  
      // ✅ Function to Add Item to Cart
      window.addToCart = function (index) {
          const product = {
              name: document.querySelectorAll(".product-name")[index].innerText,
              price: parseFloat(document.querySelectorAll(".current-price")[index].innerText.replace("₹", "")),
              image: document.querySelectorAll(".product-image img")[index].src,
          };
  
          cart.push(product);
          localStorage.setItem("cart", JSON.stringify(cart)); // ✅ Save updated cart
          updateCart();
          cartSidebar.style.right = "0"; // Open sidebar when an item is added
      };
  
      // ✅ Function to Remove Item from Cart
      window.removeFromCart = function (index) {
          cart.splice(index, 1);
          localStorage.setItem("cart", JSON.stringify(cart)); // ✅ Update localStorage
          updateCart();
      };
  
      // ✅ Function to Update Cart UI
      function updateCart() {
          if (cart.length === 0) {
              cartContent.innerHTML = "<p>Your Cart Is Empty</p>";
              cartTotal.innerText = "₹00.00";
              return;
          }

          
          let totalPrice = 0;
          cartContent.innerHTML = cart.map((item, index) => {
              totalPrice += item.price;
              return `
                  <div class="cart-item">
                      <img src="${item.image}" width="50" height="50" />
                      <span>${item.name} - ₹${item.price.toFixed(2)}</span>
                      <button onclick="removeFromCart(${index})">Remove</button>
                  </div>
              `;
          }).join("");
  
          cartTotal.innerText = `₹${totalPrice.toFixed(2)}`;
      }
  
     
window.prepareCartData = function () {
    let cart = JSON.parse(localStorage.getItem("cart")) || [];

    let totalPrice = cart.reduce((sum, item) => sum + item.price, 0); 

    cartItemNamesInput.value = JSON.stringify(cart.map(item => item.name));
    cartItemPriceInput.value = totalPrice.toFixed(2); 
};

if (window.location.pathname === "/order-confirmation") {
          localStorage.removeItem("cart");
      }

  
      
      updateCart();
  
     
      cartSidebar.style.position = "fixed";
      cartSidebar.style.top = "0";
      cartSidebar.style.right = "-300px"; 
      cartSidebar.style.width = "300px";
      cartSidebar.style.height = "100vh";
      cartSidebar.style.background = "#fff";
      cartSidebar.style.boxShadow = "-2px 0 10px rgba(0, 0, 0, 0.1)";
      cartSidebar.style.padding = "20px";
      cartSidebar.style.transition = "right 0.3s ease-in-out";
      cartSidebar.style.zIndex = "1000";
      cartSidebar.style.overflowY = "auto";
  
      
      const closeButton = document.createElement("button");
      closeButton.innerText = "Close";
      closeButton.style.position = "absolute";
      closeButton.style.top = "10px";
      closeButton.style.right = "10px";
      closeButton.style.background = "#ff4d4d";
      closeButton.style.color = "#fff";
      closeButton.style.border = "none";
      closeButton.style.padding = "8px 12px";
      closeButton.style.cursor = "pointer";
      closeButton.style.borderRadius = "5px";
  
      closeButton.addEventListener("click", function () {
          cartSidebar.style.right = "-300px"; // Hide sidebar
      });
  
      if (!cartSidebar.querySelector("button")) {
          cartSidebar.appendChild(closeButton);
      }
  
     
      cartBtn.addEventListener("click", function (event) {
          event.preventDefault(); 
          toggleCart();
      });
  });
  </script>
